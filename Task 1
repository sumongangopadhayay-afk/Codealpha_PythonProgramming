import random

def hangman():
    # List of predefined words
    words = ["python", "hangman", "program", "random", "simple"]
    
    # Choose a random word
    word = random.choice(words)
    guessed = ["_"] * len(word)   # placeholder for unguessed letters
    attempts = 6                  # maximum incorrect guesses
    guessed_letters = []          # track letters already guessed

    print("Welcome to Hangman!")
    print("Guess the word:", " ".join(guessed))

    while attempts > 0 and "_" in guessed:
        guess = input("\nEnter a letter: ").lower()

        # Check if input is valid
        if len(guess) != 1 or not guess.isalpha():
            print("Please enter a single alphabet letter.")
            continue
        if guess in guessed_letters:
            print("You already guessed that letter.")
            continue

        guessed_letters.append(guess)

        if guess in word:
            print(f"Good job! '{guess}' is in the word.")
            for i, letter in enumerate(word):
                if letter == guess:
                    guessed[i] = guess
        else:
            attempts -= 1
            print(f"Sorry, '{guess}' is not in the word. Attempts left: {attempts}")

        print("Word:", " ".join(guessed))

    # Game over conditions
    if "_" not in guessed:
        print("\nðŸŽ‰ Congratulations! You guessed the word:", word)
    else:
        print("\nðŸ˜¢ Game Over! The word was:", word)


# Run the game
if __name__ == "__main__":
    hangman()
