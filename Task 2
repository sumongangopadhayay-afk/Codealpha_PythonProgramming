# TASK 2: Stock Portfolio Tracker

# Hardcoded dictionary for stock prices
stock_prices = {
    "AAPL": 180,
    "TSLA": 250,
    "MSFT": 330,
    "GOOGL": 140,
    "AMZN": 135
}

# Dictionary to hold user's portfolio
portfolio = {}

print("üìà Welcome to the Stock Portfolio Tracker!")
print("Available stocks:", ", ".join(stock_prices.keys()))

# Taking user input
while True:
    stock = input("Enter stock symbol (or 'done' to finish): ").upper()
    if stock == "DONE":
        break
    if stock not in stock_prices:
        print("‚ùå Stock not available. Please choose from the list.")
        continue
    quantity = int(input(f"Enter quantity of {stock}: "))
    portfolio[stock] = portfolio.get(stock, 0) + quantity

# Calculate total investment
total_value = 0
print("\nüíº Your Portfolio:")
for stock, qty in portfolio.items():
    value = qty * stock_prices[stock]
    print(f"{stock} - {qty} shares √ó ${stock_prices[stock]} = ${value}")
    total_value += value

print(f"\n‚úÖ Total Investment Value: ${total_value}")

# Optional: Save to file
save = input("Do you want to save the portfolio to a file? (yes/no): ").lower()
if save == "yes":
    filename = "portfolio.csv"
    with open(filename, "w") as file:
        file.write("Stock,Quantity,Price,Value\n")
        for stock, qty in portfolio.items():
            value = qty * stock_prices[stock]
            file.write(f"{stock},{qty},{stock_prices[stock]},{value}\n")
        file.write(f"Total,,,{total_value}\n")
    print(f"üíæ Portfolio saved to {filename}")
